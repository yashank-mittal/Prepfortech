  
     while(l<=r)
     {
         mid=(l+r)/2;
         if(mid==0  || nums[mid-1]<nums[mid] and mid==n-1 || nums[mid]> nums[mid-1])
             return mid;
       if(mid==0  || nums[mid-1]<nums[mid])  
           l=mid+1;
         
         if( mid==n-1 || nums[mid]> nums[mid-1]) 
             r=m-1;
         
         
         
     }
